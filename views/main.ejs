                    <div>0</div>
                </div>
                <div id="wrapper">
                    <a class="btn">My profile</a>
                    <a class="btn" href="/auth/logout" >Log out</a>
                </div>
            </div>
            <div id="post">
                <form id="post-form">
                    <div id="textarea"><textarea></textarea></div>
                    <div id="upload-image">
                        <span id="img-wrapper">
                            <input id="input-file" type="file" accept="image/*" style="color: white;"/>
                            <button id="img-btn">Post</button>
                        </span>
                        <img id="img-content" class="img" src="" required/>
                    </div>
                </form>
            </div>
        </div>

        <div id="content">  
            <div id="hashtag">
                <form>
                    <input id="hashtag-txt" type="text" placeholder="Search tag"/>
